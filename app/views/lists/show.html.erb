<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(#);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <% if @list.movies.count == 1 || @list.movies.count == 0 %>
      <p><%= "#{@list.movies.count} movie" %></p>
    <% else %>
      <p><%= "#{@list.movies.count} movies" %></p>
    <% end %>

  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-end">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: " btn btn-ghost "  %>
  </div>

  <div class="cards">
    <% @list.bookmarks.each do |bookmark|  %>
      <div data-aos="zoom-in" class="card-movie">
        <img src="<%= bookmark.movie.poster_url %>" />
        <div  class="card-movie-infos">
          <div>
              <div class="d-flex">
                <h2 class="mr-2" ><%=   bookmark.movie.title   %></h2>
                <i class="fas fa-film mr-2"></i>
                <p class="mr-2"><%=    bookmark.movie.rating    %></p>
                <i class="fas fa-star text-warning small"></i>
              </div>
              <p class="mb-50"><%= bookmark.movie.overview %></p>
              <div class="d-flex align-item-center card-movie-bottom mt-20">
                <i class="fas fa-quote-left p-2 "></i>
                <p class="p-2 mr-2 .text-dark"><%= bookmark.comment %></p>
                <div class="ml-auto p-2 ">
                  <%= link_to "delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Sure?" }, class: "btn-flat" %>
                </div>

              </div>
          </div>

        </div>
      </div>

    <% end %>
  </div>
</div>
